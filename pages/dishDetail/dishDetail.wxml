<!--pages/dishDetail/dishDetail.wxml-->
<view class='dish_detail'>
  <swiper indicator-dots="false"
    autoplay="false" interval="3000" duration="1000" style='height: 500rpx;'>
    <block wx:for="{{list}}">
      <swiper-item>
        <image src="{{item}}" mode='scaleToFill' class="dish-detail-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view>
    <text class='detail-name'>名称：{{name}}</text>
    <text class='detail-price'>价格：￥{{price}}</text>
    <text class='detail-introduce'>介绍：{{introduce}}</text>
  </view>
